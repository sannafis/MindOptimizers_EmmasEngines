@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="css/styles.css">
<div class="login_body">
    <div class="login_background">
    </div>
    <div class="login-section">
        <section class="login-header">
            <h1 class="login-header__title">Welcome to Emma's Small Engine</h1>
            <p class="login-header__text">Log in with your company email or employee number.</p>
        </section>
        
        <form id="login-form" method="post">
            
            <button type="button" class="btn btn-autofill" id="autofill" style="justify-content:center">Admin AutoFill</button>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="username" placeholder="Email or employee number" />

                <span asp-validation-for="Input.Email" class="text-danger"></span>


                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="password" placeholder="Password" />

                    <span asp-validation-for="Input.Password" class="text-danger"></span>

            <input id="login-submit" type="submit" value="Log In" />
