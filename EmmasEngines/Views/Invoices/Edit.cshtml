@model EmmasEngines.Models.Invoice

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Invoice</h1>

<hr />
<div class="form-popup">
        <form asp-action="Edit" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appreciation" class="control-label"></label>
                <input asp-for="Appreciation" class="form-control" />
                <span asp-validation-for="Appreciation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
            <select id="dropdown"  asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label"></label>
            <select id="dropdown"  asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
            <button class="btn_submit" type="submit" value="Save">Save</button>
            </div>
        <div>
            <button class="btn_cancel"  asp-action="Index">Back to List</button>
        </div>
        </form>
    </div>




