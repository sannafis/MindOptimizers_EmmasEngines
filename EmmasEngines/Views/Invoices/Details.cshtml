@model EmmasEngines.Models.Invoice

@{
    ViewData["Title"] = "Details";
}
<style>
    th, dt, a {
        color:black;
    }
    caption {
		color: black;
		font-size: 20px;
		font-weight: bold;
	}
    
</style>

<h1>Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appreciation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appreciation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dd></dd>
    </dl>

</div>
    <caption>Invoice Lines</caption>
    <table class="table">
        <thead>
            <tr class ="table-hover">
                <th>Quantity</th>
                <th>Sale Price</th>
                <th>Inventory UPC</th>
            </tr>
        </thead>
        <tbody id ="myTable">
            @foreach (var item in Model.InvoiceLines)
            {
                <tr>
                    <td>@item.Quantity</td>
                    <td>@item.SalePrice</td>
                    <td>@item.InventoryUPC</td>
                </tr>
            }
        </tbody>
    </table>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
