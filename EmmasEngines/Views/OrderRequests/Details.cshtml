@model EmmasEngines.Models.OrderRequest

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Details for Order number: @Html.DisplayFor(model => model.ID)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReceiveDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReceiveDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExternalOrderNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExternalOrderNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
    </dl>
</div>

<h4>Items</h4>
<table class="table table-striped">
    <thead >
        <tr class ="bg-info">
            <th>@Html.DisplayNameFor(model => model.OrderRequestInventories.FirstOrDefault().InventoryUPC)</th>
            <th>@Html.DisplayNameFor(model => model.OrderRequestInventories.FirstOrDefault().Inventory.Name)</th>
            <th>@Html.DisplayNameFor(model => model.OrderRequestInventories.FirstOrDefault().Price)</th>
            <th>@Html.DisplayNameFor(model => model.OrderRequestInventories.FirstOrDefault().Quantity)</th>
            <th>    </th>
        </tr>
    </thead>
    <tbody>
        
        @if (Model.OrderRequestInventories.Count > 0)
        {
            @foreach (var item in Model.OrderRequestInventories)
            {
                <tr class="table-hover">
                    <td>@item.InventoryUPC</td>
                    <td>@item.Inventory.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        }
        else
        {
            <tr class ="table-hover">
                <td colspan="4">Add items to Order</td>
            </tr>
        }

    </tbody>
    <tfoot class ="bg-info">
        <tr>
            <td colspan="4">
                <div class="btn_crud">
                    <button type="submit" name="actionButton" value="Receive" tabindex="190" class="btn_crud_edit" onclick="" aria-label="adding item">
                        <i class="fa fa-plus"></i>
                    </button>
                    <span class="btn_tooltip">Add Item</span>
                </div>
            </td>
        </tr>
    </tfoot>
</table>

<div >
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
