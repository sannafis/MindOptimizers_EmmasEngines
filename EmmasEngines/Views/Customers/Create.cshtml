@model EmmasEngines.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Style the form labels */
    .control-label {
        font-weight: bold;
    }

    /* Set the width of the input fields */
    input.form-control, select.form-control {
        width: 250px;
    }

    /* Center the "Back to List" button */
    .btn-secondary, .btn-primary {
        margin: 10px auto;
        display: block;
    }
    
</style>

<h1>Create Customer</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Postal" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Postal" class="form-control" />
                    <span asp-validation-for="Postal" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CityID" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a href="~/POS/Index" class="btn btn-secondary">Back to POS</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
